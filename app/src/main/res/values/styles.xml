<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="WaveView">
        <attr name="wavecolor" format="color"></attr>
    </declare-styleable>

    <declare-styleable name="AddShopButton">
        <attr name="add_text_color" format="color|reference"></attr>
        <attr name="add_text_bg" format="color|reference"></attr>
        <attr name="add_text" format="string|reference"></attr>
        <attr name="add_text_size" format="dimension|reference"></attr>
        <attr name="add_padding" format="dimension|reference"></attr>
        <attr name="add_corners" format="dimension|reference"></attr>

    </declare-styleable>

</resources>
